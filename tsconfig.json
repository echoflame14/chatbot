{
    "compilerOptions": {
      "target": "ES2020", // or "ESNext"
      "module": "ESNext", // or "ES2020", "node16", or "nodenext"
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node", // Add this line
      "resolveJsonModule": true, // Optional, if you use JSON modules
      "baseUrl": ".", // Optional, to help with absolute imports
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  